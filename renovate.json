{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>smg-automotive/renovate-config"],
  "packageRules": [
    {
      "groupName": "UI dependencies",
      "matchUpdateTypes": ["patch", "minor"],
      "matchPackagePatterns": [
        "@chakra-ui/*",
        "@emotion/*",
        "framer-motion",
        "embla-carousel-react",
        "use-debounce"
      ]
    }
  ]
}
