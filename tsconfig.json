{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "jsx": "react",
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": ["jest", "node", "@testing-library/jest-dom"]
  },
  "exclude": ["dist", "node_modules"],
  "include": [
    "src/**/*",
    ".storybook/**/*",
    "src-v2/components/radio/QuestionWithFollowUp.stories.tsx",
    "src-v2/components/radio/QuestionWithFollowUp.tsx"
  ]
}
